<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <TableLayout
        android:id="@+id/tl_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/iv_img"
        >
        <TableRow>
            <Button
                android:id="@+id/btn_src"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Source" />

            <Button
                android:id="@+id/btn_gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Gray" />

            <Button
                android:id="@+id/btn_blackwhite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="BlackWhite" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_emboss"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Emboss" />

            <Button
                android:id="@+id/btn_fastblur"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="FastBlur" />

            <Button
                android:id="@+id/btn_photographicPlate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Photo Plate" />

        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btn_nostalgic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Nostalgic" />

        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btn_contrast"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Contrast" />

            <Button
                android:id="@+id/btn_brightness"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Brightness" />

            <Button
                android:id="@+id/btn_saturation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Saturation" />

        </TableRow>
    </TableLayout>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/sb_blur_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
